@model Gamefacers.Models.FrontPageViewModel


<div class="left-column">
    <form>
        <fieldset>
            <!--Hér kemur profile pic sem user hefur upploadað-->
            <p>
                
                <a href="http://www.w3schools.com">
                    <img src="http://img1.wikia.nocookie.net/__cb20150320210257/logopedia/images/f/fa/Logo-PSX.png" alt="Go to W3Schools!" width="42" height="42" border="0">
                </a>
            </p>

        </fieldset>

        <fieldset class="text-align-left">

            <p>Name: @ViewBag.user </p>
            <p>Email: @ViewBag.email</p>
             
            
            <!--Hér kemur upplýsingar um userinn Name,Email,Birthday og settings-->
            <p>@Html.ActionLink("Settings", "Index", "Manage")</p>
        </fieldset>
    </form>

    <!-- 2 Um profile og efst profile image-->
</div>

<div class="main-column">
    @foreach (var mystatus in Model.Statuses)
    {
        <p> Jonsson , @mystatus.DateCreated </p>
        <fieldset class="status">
            <!-- Hér kemur statusinn-->
            <p> @mystatus.StatusText </p>
            @using (Html.BeginForm("PostProfileComment", "Home", new { StatusId = mystatus.ID, GroupId = mystatus.GroupId }, FormMethod.Post, null))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.StatusComment.CommentText, new { htmlAttributes = new { @class = "status-textarea" } })
                        @Html.ValidationMessageFor(model => model.StatusComment.CommentText, "", new { @class = "status-textarea" })
                        <input class="status-button" name="Post" type="submit" value="Post" />
                    </div>
                </div>
            }

            @foreach (var comment in Model.StatusComments)
            {
                if (mystatus.ID == comment.StatusId)
                {
                    <br />
                    <p class="comment">@comment.CommentText</p>

                }
            }
        </fieldset>
    }
    <br />
    <br />
</div>



